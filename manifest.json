{
    "manifest_version": 2,

    "name": "Read It Later",
    "description": "Read It Later",
    "version": "1.0",

    "background": {
      "scripts": ["background.js"]
    },

    "permissions": [
      "tabs",
      "activeTab",
      "contextMenus",
      "storage"
    ],
    
    "browser_action": {
      "default_icon": "icon.png",
      "default_popup": "popup.html",
      "default_title": "Read It Later"
    }
}